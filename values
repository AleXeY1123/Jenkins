#!groovy
def val1 = "text value 1"
def val2

pipeline {
    agent { 
       node { 
          label 'agent1' 
       } 
    }

    stages {
        stage('stage1') {
            steps {
                   script {
                        val2 = "text value 2"
                   }
            }
        }
        stage('stage2') {
            steps {
                echo val1
            }
        }
        stage('stage3') {
            steps {
                echo val2
            }
        }
    }
}
